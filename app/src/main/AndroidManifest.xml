<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuri.dreamlinkcost"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 数据库模型配置 -->
        <meta-data android:name="AA_DB_NAME" android:value="DreamLink.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.yuri.dreamlinkcost.model.Cost,com.yuri.dreamlinkcost.model.Title" />

        <activity
            android:name=".LoginActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewActivity_"
            android:label="@string/title_activity_addnew" >
        </activity>
        <activity android:name=".MainActivity_"
            android:label="@string/app_name"/>
    </application>

</manifest>
