<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.yuri.dreamlinkcost.Constant.Author" />
        <import type="com.yuri.dreamlinkcost.bean.table.CardItem" />
        <variable
            name="cardItem"
            type="com.yuri.dreamlinkcost.bean.table.CardItem" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/item_background"
            >

            <TextView
                android:id="@+id/headerView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:text="@{CardItem.getHeaderText(cardItem.header)}"
                android:background="@{cardItem.getItemBackgroudRes()}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/headerView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="@{cardItem.title}" />

                <TextView
                    android:id="@+id/totalPayView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardItem.info}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/commit_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@{cardItem.isCommited?@string/commited:@string/uncommited}"
                    android:textColor="@{cardItem.isCommited?@android:color/holo_green_light:@android:color/holo_red_light}"
                    />

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardItem.date}"
                    />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>