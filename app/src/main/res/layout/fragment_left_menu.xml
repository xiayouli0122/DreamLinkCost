<layout>

    <data class="LeftMenuBinder">

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background"
        android:orientation="vertical"
        tools:context="com.yuri.dreamlinkcost.LeftMenuFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_menu_recycler_view"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/upload_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background"
            android:padding="16dp"
            android:text="UploadNewVersion"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_check_new_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@drawable/item_background"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Check New Version"
                />

            <TextView
                android:id="@+id/tv_version_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="New"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

</layout>
