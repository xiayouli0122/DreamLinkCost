<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.ui.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Who Are U?"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_liucheng"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/liucheng_button_round"
        android:gravity="center"
        android:text="L"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_xiaofei"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/xiaofei_button_round"
        android:gravity="center"
        android:text="X"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_yuri"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/yuri_button_round"
        android:gravity="center"
        android:text="Y"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        />

</LinearLayout>


